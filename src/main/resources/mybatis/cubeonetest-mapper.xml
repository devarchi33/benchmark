<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iruen.dao.CubeoneTestDao">

    <insert id="signUpUser" parameterType="com.iruen.domain.CubeoneTestUser">
        INSERT INTO test3 (email, password)
        VALUES (#{email}, #{password})
    </insert>

    <select id="dummyQuery" resultType="java.lang.String">
        SELECT 'ABCDEF12345' FROM DUAL;
    </select>

    <select id="findAllUsers" resultType="com.iruen.domain.CubeoneTestUser">
        SELECT * FROM test3
    </select>

    <select id="findUserByEmail" resultType="com.iruen.domain.CubeoneTestUser" parameterType="java.lang.String">
        SELECT * FROM test3
        WHERE email = #{email}
    </select>

    <update id="updateUser" parameterType="com.iruen.domain.CubeoneTestUser">
        UPDATE test3
        SET email = #{email}
        AND password = #{password}
        WHERE email = #{email}
    </update>

    <delete id="deleteUserByEmail" parameterType="java.lang.String">
        DELETE FROM test3
        WHERE email = #{email}
    </delete>

</mapper>